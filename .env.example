# Beeceptor & HTTP client
BEECEPTOR_BASE_URL="https://ecom-mock.free.beeceptor.com"
HTTPX_TIMEOUT=5
HTTPX_MAX_RETRIES=3
HTTPX_BACKOFF_FACTOR=0.5

# Vector KB (Chroma)
ENABLE_EMBEDDINGS=true
USE_OPENAI_EMBEDDINGS=true
CHROMA_COLLECTION=kb_faq
KB_TOP_K=3
KB_MIN_SCORE=0.35

# OpenAI
OPENAI_API_KEY='sk-1234'
OPENAI_EMBED_MODEL=text-embedding-3-small
OPENAI_TIMEOUT=15
OPENAI_MAX_RETRIES=3
OPENAI_BACKOFF=0.5
RESOLVER_MODEL=gpt-4o-mini

# modules
KNOWLEDGE_BASE_STORAGE_NAME=ChromaKnowledgeBase    # JsonKVKnowledgeBase
ORDER_API_CLIENT_NAME=OrderAPIBeeceptorClient    # OrderAPILocalClient
ROUTER_NAME=LLMRouter    # NaiveRouter, IntentMLRouter

# LLM intent & resolver (if you enabled those)
INTENT_MODEL=gpt-4o-mini
INTENT_TIMEOUT=2
RESOLVER_MODEL=gpt-4o-mini
RESOLVER_MIN_CONF=0.6

# Logging
LOG_LEVEL=INFO
